{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mediaplan.schema.json",
  "title": "Media Plan",
  "type": "object",
  "required": ["meta", "campaign", "lineitems"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "schema_version", "created_by", "created_at"],
      "properties": {
		"id": { "type": "string" },
        "schema_version": { "type": "string" },
        "name": { "type": "string" },
        "created_by_id": { "type": "string" },
        "created_by_name": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "comments": { "type": "string" },
        "is_current": { "type": "boolean" },
        "is_archived": { "type": "boolean" },
		"parent_id": { "type": "string" }
      }
    },
    "campaign": { "$ref": "campaign.schema.json" },
    "lineitems": {
      "type": "array",
      "items": { "$ref": "lineitem.schema.json" }
    },
    "dictionary": { "$ref": "campaign.schema.json" }
  }
}